<h1>Listing preferences</h1>

<table>
  <thead>
    <tr>
      <th>Type of travelers</th>
      <th>How you travel</th>
      <th>What to see</th>
      <th>How long</th>
      <th>Which region</th>
      <th>What season</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @preferences.each do |preference| %>
      <tr>
        <td><%= preference.type_of_travelers %></td>
        <td><%= preference.how_you_travel %></td>
        <td><%= preference.what_to_see %></td>
        <td><%= preference.how_long %></td>
        <td><%= preference.which_region %></td>
        <td><%= preference.what_season %></td>
        <td><%= preference.user_id %></td>
        <td><%= link_to 'Show', preference %></td>
        <td><%= link_to 'Edit', edit_preference_path(preference) %></td>
        <td><%= link_to 'Destroy', preference, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

