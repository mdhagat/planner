
	<div class="plan_heading"> Your Plans: </div>
	<br/>

    <% current_user.plans.each do |plan| %>
    
 		<div class="segment">   

			<div class="segment_desc"> 
				<div class="segment_title"> <%= plan.name %> </div> 
				<br/> <br/>
				<div class="segment_text"> <%= plan.description %> </div> 
			</div> 
 			
        	<%= link_to 'Show', plan %>
     		<%= link_to 'Edit', edit_plan_path(plan) %>
        	<%= link_to 'Destroy', plan, method: :delete, data: { confirm: 'Are you sure?' } %>
        	
   		</div>    


    <% end %>




